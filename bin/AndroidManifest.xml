<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.reversigame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.reversigame.Menu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.reversigame.Name"
            android:label="@string/title_activity_name" >
        </activity>
        <activity
            android:name="com.example.reversigame.NameForLocal"
            android:label="@string/title_activity_name_for_local" >
        </activity>
        <activity
            android:name="com.example.reversigame.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.example.reversigame.HowToPlay"
            android:label="@string/title_activity_how_to_play" >
        </activity>
        <activity
            android:name="com.example.reversigame.OnlineBoard"
            android:label="@string/title_activity_offline_board" >
        </activity>
        <activity
            android:name="com.example.reversigame.Board"
            android:label="@string/title_activity_board" >
        </activity>
        <activity
            android:name="com.example.reversigame.LocalBoard"
            android:label="@string/title_activity_local_board" >
        </activity>
        <activity
            android:name="com.example.reversigame.Winner"
            android:label="@string/title_activity_winner" >
        </activity>
    </application>

</manifest>
